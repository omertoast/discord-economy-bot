// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String @id
  balance Float
  items   UserItem[]
}

model Item {
  id     Int  @id @default(autoincrement())
  name   String
  type   Int
  offer  ShopItem?
  owners UserItem[]
}

model ShopItem {
  price  Int
  amount Int
  itemFS Item @relation(fields: [itemId], references: [id])
  itemId Int  @id
}

model UserItem {
  amount Int
  owner  User @relation(fields: [userId], references: [id])
  itemFU Item @relation(fields: [itemId], references: [id])
  itemId Int
  userId String

  @@id([itemId, userId])
}
